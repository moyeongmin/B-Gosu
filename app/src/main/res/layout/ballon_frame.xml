<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:id="@+id/balloon_mainframe"
    android:background="@drawable/background_balloon_right"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/balloon_subframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



    <TextView
        android:id="@+id/balloon_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="8dp"
        android:text="여기에 텍스트를 추가하세요."
        android:textColor="#80000000"
        android:textSize="24sp"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/balloon_image"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@drawable/no_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balloon_title"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/balloon_address"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="해줘 제발 해줘 제발해줘해줘 해줘 제발 해줘 제발해줘 제발해줘"
        android:textColor="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/balloon_image"
        app:layout_constraintTop_toBottomOf="@+id/balloon_title"
        app:layout_constraintVertical_bias="0"></TextView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="#80000000"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/balloon_address"
        app:layout_constraintStart_toStartOf="@+id/balloon_address"
        app:layout_constraintTop_toBottomOf="@+id/balloon_address" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
