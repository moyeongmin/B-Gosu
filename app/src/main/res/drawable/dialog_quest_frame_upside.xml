<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        >
        <shape android:shape="rectangle">
            <solid android:color="#4D555C"></solid>

            <size android:width="300dp"
                android:height="50dp"
                ></size>
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"></corners>

        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:left="20dp"
        android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="#4EC6DD"
                >
            </solid>
            <corners android:radius="300dp"></corners>
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:left="50dp"
        android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="#ACDF48"
                >
            </solid>
            <corners android:radius="300dp"></corners>
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:left="80dp"
        android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="#E62E43"
                >
            </solid>
            <corners android:radius="300dp"></corners>
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:left="50dp"
        >

        <shape android:shape="line">
            <size android:width="10dp"></size>
            <solid android:color="#FFFFFF"></solid>
        </shape>

    </item>
</layer-list>